---
import { ContactSection, FormSection } from "@components/sections";
import styles from "./AboutLayout.module.scss";
import { Divider } from "@components/divider";
import { Tag } from "@components/tag";
import ExperienceCard from "@components/cards/experience/ExperienceCard.astro";
import aboutData from "@data/about-data.json";
const { capabilities, about, experience } = aboutData;
---

<main class={styles.container}>
  <div class={styles["about-info-container"]}>
    <div class={styles["about-info"]}>
      <h2>ABOUT ME</h2>
    </div>
    <div class={styles["about-info"]}>
      <span class={styles["about-info-title"]}>
        {about.title}
      </span>
      <p>
        {about.description}
      </p>
      <ContactSection client:load />
    </div>
  </div>
  <Divider />
  <div class={styles["about-info-container"]}>
    <div class={styles["about-info"]}>
      <h2>MY CAPABILITIES</h2>
    </div>
    <div class={styles["about-info"]}>
      <p>
        {capabilities.description}
      </p>
      <div class={styles["about-tags-container"]}>
        {capabilities.capabilitiesList.map((tag) => <Tag label={tag} />)}
      </div>
    </div>
  </div>
  <Divider />
  <div class={styles["about-info-container"]}>
    <div class={styles["about-info"]}>
      <h2>MY EXPERIENCE</h2>
    </div>
    <div class={`${styles["about-info"]} ${styles["experience-container"]}`}>
      {experience.experienceList.map((item) => <ExperienceCard item={item} />)}
    </div>
  </div>
  <Divider />
  <div class={styles["form-section-container"]}>
    <FormSection client:load />
  </div>
</main>
